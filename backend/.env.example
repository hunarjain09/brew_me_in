# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/brew_me_in
DB_HOST=localhost
DB_PORT=5432
DB_NAME=brew_me_in
DB_USER=username
DB_PASSWORD=password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3001,http://localhost:19006,http://localhost:5173

# Basic Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_ENABLED=true

# Message Rate Limits (Free Users)
RATE_LIMIT_MESSAGE_FREE_COUNT=30
RATE_LIMIT_MESSAGE_FREE_WINDOW=3600
RATE_LIMIT_MESSAGE_FREE_COOLDOWN=30

# Message Rate Limits (Badge Holders)
RATE_LIMIT_MESSAGE_BADGE_COUNT=60
RATE_LIMIT_MESSAGE_BADGE_WINDOW=3600
RATE_LIMIT_MESSAGE_BADGE_COOLDOWN=15

# Agent Rate Limits
RATE_LIMIT_AGENT_PERSONAL_COUNT=2
RATE_LIMIT_AGENT_GLOBAL_COOLDOWN=120

# Poke Rate Limits
RATE_LIMIT_POKE_COUNT=5
RATE_LIMIT_POKE_WINDOW=86400

# Spam Detection Configuration
SPAM_DETECTION_ENABLED=true
SPAM_DUPLICATE_WINDOW=300
SPAM_MAX_CAPS_PERCENTAGE=50
SPAM_MAX_URLS=2
SPAM_MUTE_DURATION=86400

# Badge Settings
BADGE_TIP_THRESHOLD=5
BADGE_TIP_WINDOW_DAYS=7
BADGE_DURATION_DAYS=30

# User Settings
USER_SESSION_DURATION_HOURS=24

# Component 4: Poke System Rate Limiting
POKE_RATE_LIMIT_WINDOW_MS=3600000
POKE_RATE_LIMIT_MAX=10

# Poke Expiration
POKE_EXPIRATION_HOURS=24

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Anthropic Claude API (Component 5)
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-sonnet-4-20250514
ANTHROPIC_API_VERSION=2023-06-01

# AI Agent Cache Configuration (Component 5)
AGENT_CACHE_TTL=3600
COMMON_QUERIES_CACHE_TTL=7200
GLOBAL_RATE_LIMIT_MS=2000
USER_RATE_LIMIT_DAILY=100
