{
  "name": "brew-me-in",
  "version": "1.0.0",
  "description": "Moderator Dashboard & Admin Tools for Cafe Management",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "test:e2e": "npm run test:e2e -w frontend",
    "test:e2e:ui": "npm run test:e2e:ui -w frontend",
    "test:e2e:headed": "npm run test:e2e:headed -w frontend",
    "test:e2e:debug": "npm run test:e2e:debug -w frontend",
    "test:e2e:report": "npm run test:e2e:report -w frontend",
    "test:e2e:update-snapshots": "npm run test:e2e:update-snapshots -w frontend",
    "prepare": "npx husky install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^8.0.3"
  }
}
